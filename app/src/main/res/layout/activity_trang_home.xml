<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0FC"
    android:id="@+id/tranghome"
    tools:context=".TrangHome">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/anhkhungdaidien"

            android:layout_width="426dp"
            android:layout_height="268dp"
            android:layout_marginBottom="46dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/top_background" />

    <TextView
        android:id="@+id/welcome"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        android:text="Chào mừng,"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tenthanhvien"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Thành Viên"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <ImageView
        android:id="@+id/imageThanhVien"

        android:layout_width="119dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="@+id/tenthanhvien"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@+id/welcome"
        app:srcCompat="@drawable/img_comics4u" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/white_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/anhkhungdaidien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anhkhungdaidien">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_banner_background"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hotro"

                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/support" />

            <TextView
                android:id="@+id/textHotro"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hỗ trợ"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:textStyle="bold|italic"
                android:textColor="#6672FF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_banner_background"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thongtin"

                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/notification" />

            <TextView
                android:id="@+id/textThongtin"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Thông tin"
                android:textAlignment="center"
                android:textColor="#6672FF"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_banner_background"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/giohang"

                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/shopping_cart" />

            <TextView
                android:id="@+id/textgiohang"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giỏ hàng"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:textStyle="bold|italic"
                android:textColor="#6672FF" />
        </LinearLayout>
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>